            <!-- Right side: Login Form -->
            <VBox alignment="CENTER" prefHeight="400.0" prefWidth="300.0" spacing="10">
               <children>
                  <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Login to your Account" />
                  <Label style="-fx-font-size: 12px; -fx-text-fill: gray;" text="BookBridge - Bridging Readers to Knowledge ðŸ“šâœ¨" />
                  <JFXTextField fx:id="emailTxtField" promptText="Email" />
                  <JFXPasswordField fx:id="passwordTxtField" promptText="Password" />
                  <JFXButton onAction="#btnLoginOnAction" style="-fx-background-color: #800040; -fx-text-fill: white;" text="Login" />
                  <Label text="Not Registered Yet?" />
                  <JFXButton onAction="#btnSignUpOnAction" style="-fx-text-fill: #800040;" text="Create an account" />
